<Window x:Class="AdaptationManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление адаптацией" Height="600" Width="1000">
    <Grid>
        <TabControl x:Name="MainTabControl" SelectionChanged="MainTabControl_SelectionChanged">
            <TabItem Header="Адаптационные модули">
                <Frame x:Name="ModulesFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>

            <TabItem Header="Конструктор">
                <Frame x:Name="ConstructorFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>

            <TabItem Header="Анализ адаптационных мероприятий">
                <Frame x:Name="AnalysisFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>